{
  "name": "packages",
  "main": "dist/index",
  "types": "dist/index",
  "version": "0.0.1",
  "scripts": {
    "build": "rimraf dist && tsc && cpx package.json dist",
    "export": "npm-run-all export:*",
    "export:yodon-auth-api": "cpx --clean src/yodon-auth-api/**/* ../srvs/auth-api/src/imports/yodon-auth-api",
    "export:yodon-auth-sdk": "cpx --clean src/yodon-auth-sdk/**/* ../srvs/main-site/src/imports/yodon-auth-sdk",
    "export:yodon-auth-types": "cpx --clean src/yodon-auth-types/**/* ../srvs/main-site/src/imports/yodon-auth-types && cpx --clean src/yodon-auth-types/**/* ../srvs/auth-api/src/imports/yodon-auth-types",
    "export:yodon-cookie": "cpx --clean src/yodon-cookie/**/* ../srvs/main-site/src/imports/yodon-cookie",
    "export:yodon-cryptoSign": "cpx --clean src/yodon-cryptoSign/**/* ../srvs/auth-api/src/imports/yodon-cryptoSign",
    "export:yodon-cryptoVerify": "cpx --clean src/yodon-cryptoVerify/**/* ../srvs/main-site/src/imports/yodon-cryptoVerify",
    "export:yodon-demo-api": "cpx --clean src/yodon-demo-api/**/* ../srvs/demo-api/src/imports/yodon-demo-api",
    "export:yodon-demo-sdk": "cpx --clean src/yodon-demo-sdk/**/* ../srvs/main-site/src/imports/yodon-demo-sdk",
    "export:yodon-login-sdk": "cpx --clean src/yodon-login-sdk/**/* ../srvs/main-site/src/imports/yodon-login-sdk",
    "lint": "eslint --ignore-path .gitignore . --ext ts --ext tsx --ext js --ext jsx",
    "lint:fix": "eslint --fix --ignore-path .gitignore . --ext ts --ext tsx --ext js --ext jsx",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@nestjs/common": "^6.11.7",
    "@nestjs/core": "^6.11.7",
    "@nestjs/passport": "^6.1.1",
    "@nestjs/platform-express": "^6.11.7",
    "@nestjs/swagger": "^4.2.8",
    "@nestjs/websockets": "^6.11.7",
    "axios": "^0.19.2",
    "class-transformer": "^0.3.1",
    "class-validator": "^0.11.0",
    "cpx": "^1.5.0",
    "crypto-random-string": "^3.0.1",
    "dotenv": "^8.2.0",
    "express-session": "^1.17.0",
    "nestjs-cookie-session": "^0.2.2",
    "npm-run-all": "^4.1.5",
    "passport": "^0.4.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.0",
    "rxjs": "^6.5.3",
    "safe-stable-stringify": "^1.1.0",
    "swagger-ui-express": "^4.1.3"
  },
  "devDependencies": {
    "@nestjs/cli": "^6.14.2",
    "@nestjs/schematics": "^6.9.4",
    "@nestjs/testing": "^6.11.7",
    "@types/express": "^4.17.1",
    "@types/jest": "^24.0.18",
    "@types/node": "^12.7.5",
    "@types/supertest": "^2.0.8",
    "@typescript-eslint/eslint-plugin": "^2.6.1",
    "@typescript-eslint/parser": "^2.6.1",
    "eslint": "^6.6.0",
    "eslint-config-prettier": "^6.5.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jest": "^23.0.3",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-simple-import-sort": "^4.0.0",
    "jest": "^24.9.0",
    "prettier": "^1.19.1",
    "supertest": "^4.0.2",
    "ts-jest": "^24.1.0",
    "ts-loader": "^6.1.1",
    "ts-node": "^8.4.1",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^3.6.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "./coverage",
    "testEnvironment": "node"
  }
}
